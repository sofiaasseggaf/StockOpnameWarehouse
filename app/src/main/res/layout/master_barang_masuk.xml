<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".master_inventori.BarangMasuk">

    <FrameLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/top_logonama"
        android:layout_above="@id/ll1"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="25dp"/>


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/top"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item CD"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="14sp"
            android:textColor="#555555"/>

        <EditText
            android:id="@+id/et_item_cd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_editbarang_noedit"
            android:paddingLeft="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="14sp"
            android:textColor="#555555"
            android:editable="false"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Desc"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColor="#555555"/>

        <EditText
            android:id="@+id/et_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_editbarang_noedit"
            android:paddingLeft="10dp"
            android:editable="false"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Quantity"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/et_jml_barang_masuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_editbarang_yesedit"
            android:paddingLeft="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:inputType="number"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_centerHorizontal="true">



            <ImageButton
                android:id="@+id/btn_simpan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_simpan"
                android:layout_marginRight="15dp"/>

            <ImageButton
                android:id="@+id/btn_batal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_batal"/>


        </LinearLayout>

    </LinearLayout>



</RelativeLayout>