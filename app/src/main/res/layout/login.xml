<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitebackground"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:fontFamily="@font/comfortaa_regular"
        android:textSize="36sp"
        android:textColor="@color/redfont"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="75dp"/>

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_edittext"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Username"
        android:textColorHint="#95000000"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:fontFamily="@font/roboto_regular"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_edittext"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#95000000"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:fontFamily="@font/roboto_regular"
        android:textSize="15sp"/>

    <ImageButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_login_red"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#6DEFEFEF">

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:indeterminateDrawable="@drawable/pbstyle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp">
    </ProgressBar>

</FrameLayout>

</RelativeLayout>